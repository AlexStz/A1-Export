Функция ДобавитьРеквизитыДоговора(Префикс, ИсточникДанных, ПриемникДанных) Экспорт 
	Префикс_ = Префикс + "_";
	ПриемникДанных.Вставить(Префикс_ + "ЮрНаименование", ИсточникДанных[Префикс_ + "ЮрНаименование"]);
	ПриемникДанных.Вставить(Префикс_ + "ЮрНаименованиеСокр", ИсточникДанных[Префикс_ + "ЮрНаименованиеСокр"]);
	ПриемникДанных.Вставить(Префикс_ + "Должность", ИсточникДанных[Префикс_ + "Должность"]);
	ПриемникДанных.Вставить(Префикс_ + "ДолжностьРодП", А1Э_Строки.Склонение(ИсточникДанных[Префикс_ + "Должность"], "Р", ,"Д"));
	ПриемникДанных.Вставить(Префикс_ + "ФИОРодП", А1Э_Строки.Склонение(ИсточникДанных[Префикс_ + "ФИО"], "Р"));
	ПриемникДанных.Вставить(Префикс_ + "ОснованиеРодП", ?(ЗначениеЗаполнено(ИсточникДанных[Префикс_ + "Основание"]), А1Э_Строки.Склонение(ИсточникДанных[Префикс_ + "Основание"], , , "В"), "Устава"));
	ПриемникДанных.Вставить(Префикс_ + "ФИОСокр", А1Э_Строки.ФИО(ИсточникДанных[Префикс_ + "ФИО"]));
КонецФункции

